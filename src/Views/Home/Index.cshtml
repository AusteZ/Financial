@model SettingsModel

<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>

        body {
            background: linear-gradient(90deg, #C7C5F4, #776BCC);
            padding: 16px 20px;
        }

        * {
            box-sizing: border-box;
            align-items: center;
            padding: 0;
            font-family: Raleway, sans-serif;
        }

        .blue {
            background-color: #123456 !important;
        }

        .grey {
            background-color: #ffcba4 !important;
        }

        .greyblue {
            background-color: #6789AB !important;
        }

        .rectangle {
            position: absolute;
            width: 100%;
            height: 35%;
        }

        .overlay {
            height: 40%;
            width: 100%;
        }

        .card-size {
            height: 300px;
            width: 10%;
        }

        .card {
            position: relative;
        }

        .padding-both-sides {
            padding-left: 25% !important;
            padding-right: 25% !important;
        }

        .padding-left {
            padding-left: 25% !important;
        }

        .form-size {
            width: 60%; !important
        }

        .form-padding {
            padding-left: 30px;
            padding-top: 30px;
            padding-right: 30px;
            display: none;
        }

        .form-result {
            width: 40%; !important
        }

        .float-left {
            float: left;
        }

        .button{
            background: #fff;
            font-size: 14px;
            margin-top: 30px;
            padding: 16px 20px;
            border-radius: 26px;
            border: 1px solid #D4D3E8;
            text-transform: uppercase;
            font-weight: 700; 
            align-items: center;
            width: fit-content;
            color: #4C489D;
            box-shadow: 0px 2px 2px #5C5696;
            cursor: pointer;
            transition: .2s;
            text-align: center;
        }

        .screen {
            background: linear-gradient(90deg, #5D54A4, #7C78B8);
            font-size: 18px;
            margin-top: 30px;
            padding: 16px 20px;
            border-radius: 26px;
            border: 1px solid #D4D3E8;
            position: relative;
            align-items: center;
            width: 100%;
            box-shadow: 0px 2px 2px #5C5696;
            cursor: pointer;
            transition: .2s;
        }
        .bg-red{
            background-color: #FC6A6A
        }
        .bg-green {
            background-color: #AEFFB6
        }
    </style>
</head>
<body>
    <div class ="screen">
        <div>
            <a id="none" asp-controller="Home" asp-action="Save" class="btn button">Save</a>
            <a onclick="showhide('sortdiv')" class="btn button">Sort</a>
            <a onclick="showhide('filterdiv')" class="btn button">Filter</a>
            <!--<a onclick="showhide('calculatediv')" class="btn button">Calculate</a>-->
            <a id="none" asp-controller="Home" asp-action="ExpensesForm" class="btn button">Create New
                Expense</a>
            <a id="none" asp-controller="Home" asp-action="ExpensesForm" asp-route-type="1" class="btn button">
                Create
                New Income</a>
        </div>
        <div id="filterdiv" class="form-padding">
            <form asp-controller="Home" asp-action="Filter">
                <div>
                    <label class="form-label">Expenses</label>
                    <input asp-for=IsExpense type="checkbox" />
                    <label class="form-label padding-left">Incomes</label>
                    <input asp-for=IsIncome type="checkbox" />
                </div>
                <div class="form-row">
                    <div div class="col">
                        <label class="form-label">Date</label>
                        <input asp-for=From type="date" class="form-control" />
                    </div>
                    <div div class="col">
                        <label class="form-label">Date</label>
                        <input asp-for=To type="date" class="form-control" />
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-light">Submit</button>
                </div>
            </form>
        </div>
        <div id="sortdiv" class="form-padding">
            <form asp-controller="Home" asp-action="Sort" method="post">
                <div>
                    <label class="form-label">Sort by</label>
                    <select asp-for=SortType class="form-control">
                        <option id="Name" value = "Name" >Name</option>
                        <option id="Place" value="Place" >Place</option>
                        <option id="Amount" value = "Amount" >Amount</option>
                        <option id="Date" value="Date" >Date</option>
                    </select>
                </div>
                
                <div class="mt-3">
                    <button type="submit" class="btn btn-light">Submit</button>
                </div>
            </form>
        </div>

        <br /><br />
        <table class="table text-bg-white">
            <thead>
                <tr class="text-white">
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Currency</th>
                    <th scope="col">Date</th>
                    <th scope="col">Place</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.PresentList) {@if(expense.isExpense==true){
                <tr class="bg-red">
                    <td>@expense.Product</td>
                    <td>@expense.Category</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Currency</td>
                    <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                    <td>@expense.Place</td>
                    <td>
                        @Html.ActionLink(
                        "Edit",
                        "ExpensesForm", // controller action
                        "Home", // controller
                        new { id = expense.Id.ToString() }, // action parameters aka route values
                        new { @class = "btn btn-light" })
                        @Html.ActionLink(
                        "Delete",
                        "ExpenseLineDelete", // controller action
                        "Home", // controller
                        new { id = expense.Id.ToString() , type = 0}, // action parameters aka route values
                        new { @class = "btn btn-light" })

                    </td>
                </tr>
                }
                @if(expense.isExpense==false){
                <tr class="bg-green">
                    <td>@expense.Product</td>
                    <td>@expense.Category</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Currency</td>
                    <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                    <td>@expense.Place</td>
                    <td>
                        @Html.ActionLink(
                        "Edit",
                        "ExpensesForm", // controller action
                        "Home", // controller
                        new { id = expense.Id.ToString() }, // action parameters aka route values
                        new { @class = "btn btn-light" })
                        @Html.ActionLink(
                        "Delete",
                        "ExpenseLineDelete", // controller action
                        "Home", // controller
                        new { id = expense.Id.ToString() , type = 0}, // action parameters aka route values
                        new { @class = "btn btn-light" })

                    </td>
                </tr>
                }}
        </table>
    </div>
    <script>
        function showhide(buttonid) {
            if (buttonid != "sortdiv") {
                document.getElementById("sortdiv").style.display = "none";
            }
            /*if (buttonid != "calculatediv") {
                document.getElementById("calculatediv").style.display = "none";
            }*/
            if (buttonid != "filterdiv") {
                document.getElementById("filterdiv").style.display = "none";
            }

            if (document.getElementById(buttonid).style.display == "none") {
                document.getElementById(buttonid).style.display = "block";
            }
            else {
                document.getElementById(buttonid).style.display = "none";
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
    <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>

