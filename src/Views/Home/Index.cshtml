@{
    ViewData["Title"] = "Home Page";
}

<html>
    <head>
<!-- CSS only -->
        <style>
            .blue{
                background-color: #123456!important;
            }
            .grey{
                background-color: #b5b5b5!important;
            }
            .greyblue{
                background-color:#6789AB!important;
            }
            .rectangle{
                position: absolute;
                width: 100%;
                height: 65%;
            }
            .overlay{
                z-index: 100;
                height: 40%;
                width: 100%;
            }
            .card-size{
                height: 300px;
                width: 10%;
            }
            .card{
