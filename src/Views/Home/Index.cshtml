@model StatisticsModel

@{
    ViewData["Title"] = "Home Page";
}

<html>
    <head>
<!-- CSS only -->
        <style>
            .blue{
                background-color: #123456!important;
            }
            .grey{
                background-color: #b5b5b5!important;
            }
            .greyblue{
                background-color:#6789AB!important;
            }
            .rectangle{
                position: absolute;
                width: 100%;
                height: 35%;
            }
            .overlay{
                z-index: 100;
                height: 40%;
                width: 100%;
            }
            .card-size{
                height: 300px;
                width: 10%;
            }
            .card{
                position:relative;
            }
            .padding-both-sides{
                padding-left: 25% !important;
                padding-right: 25% !important;
            }
            .padding-left{
                padding-left: 25% !important;
            }

        </style>
    </head>
    <body class = "blue">
        <div class = "card grey">
            <div class = "card-body">
                <form asp-controller = "Home" asp-action = "StatisticsSettings" method = "post">
                    <div>
                        <label class = "form-label ">Expense?</label>
                        <input asp-for=IsExpense type="checkbox"/>
                        <label class = "form-label padding-left">Income?</label>
                        <input asp-for=IsIncome type="checkbox"/>
                    </div>
                    <div>
                        <label class = "form-label">Type</label>
                        <select asp-for=Type class="form-control" id="type" onchange="averageCheck(this);">

                            <option value="Total">Total</option>
                            <option value="Average">Average</option>
 
                        </select>
                    </div>
                    <div>
                        <label id="other" class = "form-label">Period</label>
                        <select asp-for=Period id="other" class="form-control">

                            <option value="1">Daily</option>
                            <option value="2">Monthly</option>
                            <option value="3">Yearly</option>

                        </select>
                    </div>
                    <div>
                        <label class = "form-label">Date</label>
                        <input asp-for=From type="date" class = "form-control"/>
                    </div>
                
                    <div class = "mt-3">
                        <button type = "submit" class = "btn btn-light">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <div class = "rectangle grey">
            <p class = "h1 text-center pt-5">An app for finances</p>
            </br>
            <p class = "h2 text-center">
                @Model.Count()
            </p>
        </div>
        <div class = "overlay"></div>


    </body>
</html>