<html>
<head>
<!-- CSS only -->
    <style>
        .blue{
            background-color: #123456!important;
        }
        .grey{
            background-color: #b5b5b5!important;
        }
        .greyblue{
            background-color:#6789AB!important;
        }
        .rectangle{
            position: absolute;
            width: 100%;
            height: 65%;
        }
        .overlay{
            z-index: 100;
            height: 40%;
            width: 100%;
        }
        .card-size{
            height: 300px;
            width: 10%;
        }
        .card{
            position:relative;
        }
        .padding-both-sides{
            padding-left: 25% !important;
            padding-right: 25% !important;
        }
        .unseen{
            display: none;
        }
    </style>
</head>
<body class = "blue">
    @if (Model.isExpense)
    {
        <h1 class="text-white">Expense</h1>
    }else{
        <h1 class="text-white">Income</h1>
    }
    <div class = "card grey">
            <div class = "card-body">
                <form asp-controller = "Home" asp-action = "ExpenseLine" method = "post">
                    <div>
                        <label class = "form-label">Product</label>
                        <input asp-for=Product type="text" class = "form-control"/>
                    </div>
                    <div>
                        <label class = "form-label">Category</label>
                        <select asp-for=Category class="form-control" required>

                            <option value="">Select a category</option>
                            <option value="Housing">Housing</option>
                            <option value="Transportation">Transportation</option>
                            <option value="Food">Food</option>
                            <option value="Utilities">Utilities</option>
                            <option value="Healthcare">Healthcare</option>
                            <option value="Saving&Investing">Saving&Investing</option>
                            <option value="Clothing">Clothing</option>
                            <option value="Entertainment">Entertainment</option>
 
                        </select>
                    </div>
                
                    <div>
                        <label class = "form-label">How much</label>
                        <input asp-for=Amount type="number" step="0.01" class = "form-control"/>
                    </div>
                    <div>
                        <label class = "form-label">Where</label>
                        <input asp-for=Place class = "form-control"/>
                        <input asp-for=isExpense value=@Model.isExpense type=checkbox class = "unseen"/>
                    </div>
                    <div>
                        <label class = "form-label">Date</label>
                        <input asp-for=Date type="date" class = "form-control"/>
                    </div>
                    <div class = "mt-3">
                        <button type = "submit" class = "btn btn-light">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        




        
