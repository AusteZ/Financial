        .cont {
            position: relative;
            /*max-width: 700px;*/
            object-position: center;
            width: 80%;
            background-color: #fff;
            padding: 25px 30px;
            border-radius: 5px;
            box-shadow: rgb(135,123,217) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            text-align: left;
        }

        .form-control {
            box-shadow: rgb(135,123,217) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
            border: #4633C7FF;
        }

        .title {
            position: center;
            font-size: 25px;
            font-weight: 500;
        }

        .btn.btn-light {
            border-color: #4633c7;
            background-color: #877BD9FF;
        }

        .rectangle {
            position: absolute;
            width: 100%;
            height: 65%;
        }

        .overlay {
            z-index: 100;
            height: 40%;
            width: 100%;
        }

        .card-size {
            height: 300px;
            width: 10%;
        }

        .card {
            position: relative;
        }

        .padding-both-sides {
            padding-left: 25% !important;
            padding-right: 25% !important;
        }

        .unseen {
            display: none;
        }
    </style>
</head>

<body>

    @if (Model.isExpense)
    {
        @* <h1 class="text-white text-center">Expense</h1> *@
        <div class="text-center">
            <img src="~/img/Expense.jpg" alt="Expense" width=300px height=150px>
            <br><br>
        </div>


    }
    else
    {
        @* <h1 class="text-white">Income</h1> *@
        <div class="text-center">
            <img src="~/img/Income.jpg" alt="Expense" width=290px height=150px>
            <br><br>
        </div>
    }
    @* <div class="container center"><img src="~/img/Expense.jpg" alt="logo" style="width:250px;height:150px;"></div> *@
    <div class="body">
        </br>
        <form asp-controller="Home" asp-action="ExpenseLine" method="post">
            <div class="cont">
                <div>
                    <label class="form-label title">PRODUCT</label>
                    <input asp-for=Product type="text" class="form-control" />
                </div>
                <div>
                    <label class="form-label">Category</label>
                    <select asp-for=Category class="form-control">
                        <option value="Housing">Housing</option>
                        <option value="Transportation">Transportation</option>
                        <option value="Food">Food</option>
                        <option value="Utilities">Utilities</option>
                        <option value="Healthcare">Healthcare</option>
                        <option value="Saving&Investing">Saving&Investing</option>
                        <option value="Clothing">Clothing</option>
                        <option value="Entertainment">Entertainment</option>

                    </select>
                </div>

                <div>
                    <label class="form-label">How much</label>
                    <input asp-for=Amount type="number" step="0.01" class="form-control" />
                </div>
                <div>
                    <label class="form-label">Where</label>
                    <input asp-for=Place class="form-control" />
                    <input asp-for=isExpense value=@Model.isExpense type=checkbox class="unseen" />
                </div>
                <div>
                    <label class="form-label">Date</label>
                    <input asp-for=Date type="date" class="form-control" />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-light">Submit</button>
                </div>
            </div>

        </form>
    </div>








