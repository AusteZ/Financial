<style>
    * {
        box-sizing: border-box;
        align-items: center;
        margin: auto;
        padding: 0;
        font-family: Raleway, sans-serif;
    }
    .container {
        padding: 16px;
        align-items: center;
        text-align: center;
    }

    .container1 {
        padding: 16px;
        align-items: center;
    }

    body {
        background: linear-gradient(90deg, #C7C5F4, #776BCC);
    }
    
    input[type=text], input[type=password] {
        width: 100%;
        padding: 15px;
        margin: 5px 0 22px 0;
        display: inline-block;
        border: none;
        background: #f1f1f1;
    }
        input[type=text]:focus, input[type=password]:focus {
            background-color: #ddd;
            outline: none;
        }
    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }
    .registerbtn {
        background-color: #7875B5;
        color: white;
        padding: 16px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
    }
        .registerbtn:hover {
            opacity: 1;
        }
    a {
        color: black;
    }
    .signin {
        text-align: center;
        text-align: center;
    }
</style>

<form asp-controller = "Home" asp-action = "RegisterForm" method = "post">
    <div class="container center">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        </div>
        <div class="container1 center">
        <hr>

        <label for="email"><b>Email</b></label>
        <input asp-for=Email type="text" placeholder="Enter Email" required>

        <label for="psw"><b>Password</b></label>
        <input id = "passbox" asp-for=Password type="password" placeholder="Enter Password" required>

        <label><b>Confirm Password</b></label>
        <input id = "passconbox" type="password" placeholder="Confirm Password" required>
        <hr>
        @if (SettingsModel.ErrorFlag == true)
        {
            <div>
                <p class="text-danger">The email has to have an @@ symbol and a dot (.)</p>
                <br/>
                <p class="text-danger">The password must be at least 8 characters long, have an upper and a lover case character, a special character and a number.</p>
            </div>
        }
        <button id="submitbutton" type="submit" class="registerbtn" disabled>Register</button>
    </div>

    <div class="container signin">
        <p>Already have an account? <a asp-controller="Home" asp-action="Login"> Sign in</a>.</p>
    </div>
</form>
<script>
    var passbox = document.getElementById('passbox');
    var passconbox = document.getElementById('passconbox');

    document.getElementById('passbox').onkeyup = check();
    document.getElementById('passconbox').onkeyup = check();
    
    
    function check () {
            console.log(passbox.value);
        if(passbox.value === passconbox.value){
            document.querySelector('#submitbutton').disabled = false;
        }
        else{
            document.querySelector('#submitbutton').disabled = true;
        }
    }
</script>