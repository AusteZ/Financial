<div class = "card grey">
            <div class = "card-body">
                <form asp-controller = "Home" asp-action = "LoginForm" method = "post">
                    <div>
                        <label class = "form-label">Email</label>
                        <input asp-for=Email type="text" class = "form-control"/>
                    </div>
                    @if (@Model.Email == "no"){
                        <div class = "text-errror">
                            Please put in a valid email!
                        </div>
                    }
                    <div class = "mt-3">
                        <button type = "submit" class = "btn btn-light">Submit</button>
                    </div>
                </form>
            </div>
        </div>