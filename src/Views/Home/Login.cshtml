@{
}
<style>
* {
box-sizing: border-box
}
.container {
padding: 16px;
}
hr {
border: 1px solid #f1f1f1;
margin-bottom: 25px;
}
.loginbtn {
background-color: #123456;
color: white;
padding: 16px 20px;
margin: 8px 0;
border: none;
cursor: pointer;
width: 100%;
opacity: 0.9;
}
.registerbtn:hover {
opacity: 1;
}
a {
color: dodgerblue;
}
.register {
background-color: #f1f1f1;
text-align: center;
}
</style>

<hr />
<div class="container">
    <h4>Please login :) </h4>

    <div class = "card grey">
        <div class = "card-body">
            <form asp-controller = "Home" asp-action = "LoginForm" method = "post">
                <div>
                    <label class = "form-label">Email</label>
                    <input asp-for=Email type="text" class = "form-control"/>
                </div>
                @if (@Model.Email == "no"){
                    <div class = "text-errror">
                        Please put in a valid email!
                    </div>
                }
                <div>
                    <label class = "form-label">Password</label>
                    <input asp-for=Password type="password" class = "form-control"/>
                </div>
                <div class = "mt-3">
                    <button type = "submit" class = "loginbtn">Login</button>
                </div>
            </form>
        </div>
    </div>
    
</div>
@if (@Model.Password == "no")
{
    <div class="text-errror">
        Please put in a valid password!
    </div>
}

<div class="container register">
    <a asp-controller = "Home" asp-action="Register">New member? Sign up</a>
</div>