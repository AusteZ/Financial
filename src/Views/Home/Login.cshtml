<style>
    * {
        box-sizing: border-box;
        align-items: center;
        margin: auto;
        padding: 0;
        font-family: Raleway, sans-serif;
    }

    .container {
        align-items: center;
        text-align: center;
        color: white;
    }

    .container1 {
        padding: 16px;
        align-items: center;
        font-family: "Rage Italic";
    }

    body {
        /*background: linear-gradient(90deg, #C7C5F4, #776BCC);*/
        background: #C7C5F4;
    }

    hr {
        border: 1px solid #f1f1f1;
        /*margin-bottom: 25px;*/
    }

    .loginbtn {
        background: #fff;
        font-size: 14px;
        margin-top: 30px;
        padding: 16px 20px;
        border-radius: 26px;
        border: 1px solid #D4D3E8;
        text-transform: uppercase;
        font-weight: 700;
        display: flex;
        align-items: center;
        width: 100%;
        color: #4C489D;
        box-shadow: 0px 2px 2px #5C5696;
        cursor: pointer;
        transition: .2s;
        font-family: "Rage Italic";
    }

    .registerbtn:hover {
        font-size: 24px;
        color: #7875B5;
        font-family: "Rage Italic";
    }

    a {
        color: black;
    }

    p {
        color: white;
        text-align: center;
        font-family: "Rage Italic";
        text-shadow: 2px 2px 4px #000000;
    }

    .register {
        text-align: center;
        margin: auto;
        color: white;
        font-family: "Rage Italic";
    }

    .center {
        margin: auto;
        width: 50%;
        padding: 10px;
    }

    .screen {
        background: linear-gradient(90deg, #5D54A4, #7C78B8);
        font-size: 18px;
        margin-top: 30px;
        padding: 16px 20px;
        border-radius: 26px;
        border: 1px solid #D4D3E8;
        position: relative;
        align-items: center;
        height: 300px;
        width: 600px;
        /*box-shadow: 0px 2px 2px #5C5696;*/
        cursor: pointer;
        transition: .2s;
        box-shadow: rgb(135,123,217) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
    }
</style>
<hr />
<div class="container center">
    <img src="~/img/logo.jpg" alt="logo" style="width:350px;height:350px;">
    @* <h4>Please login :) </h4> *@
</div>
<div class="container1 center">
    <div class="screen">
        <p>PLEASE LOGIN</p>
        <form asp-controller="Home" asp-action="LoginForm" method="post">
            <div>
                <label class="form-label">Email</label>
                <input asp-for=Email type="text" class="form-control" required />
            </div>
            <div>
                <label class="form-label">Password</label>
                <input asp-for=Password type="password" class="form-control" required />
            </div>
            @if (SettingsModel.ErrorFlag == true)
            {
                <div class="text-danger">Login information incorrect. Please double-check or register</div>
            }
            <div class="mt-3">
                <button type="submit" class="loginbtn">Login</button>
            </div>
        </form>
    </div>
</div>


<div class="container register text-white">
    </br>
    <a asp-controller="Home" asp-action="Register">New member? Sign up</a>
</div>