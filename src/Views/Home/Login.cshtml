@{
}
<style>
    * {
        box-sizing: border-box;
        align-items: center;
        margin:auto;
        padding: 0;
        font-family: Raleway, sans-serif;
    }

    .container {
        padding: 16px;
        align-items: center;
        text-align: center;
    }

    .container1 {
        padding: 16px;
        align-items: center;
    }

    body {
        background: linear-gradient(90deg, #C7C5F4, #776BCC);
    }

    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }

    .loginbtn {
        background: #fff;
        font-size: 14px;
        margin-top: 30px;
        padding: 16px 20px;
        border-radius: 26px;
        border: 1px solid #D4D3E8;
        text-transform: uppercase;
        font-weight: 700;
        display: flex;
        align-items: center;
        width: 100%;
        color: #4C489D;
        box-shadow: 0px 2px 2px #5C5696;
        cursor: pointer;
        transition: .2s;
    }

    .registerbtn:hover {
        font-size: 24px;
        color: #7875B5;
    }

    a {
        color: black;
    }

    .register {
        text-align: center;
        margin: auto;
    }

    .center {
        margin: auto;
        width: 50%;
        padding: 10px;
    }

    .screen {
        background: linear-gradient(90deg, #5D54A4, #7C78B8);
        font-size: 18px;
        margin-top: 30px;
        padding: 16px 20px;
        border-radius: 26px;
        border: 1px solid #D4D3E8;
        position: relative;
        align-items: center;
        width: 100%;
        height: 300px;
        width: 600px;
        box-shadow: 0px 2px 2px #5C5696;
        cursor: pointer;
        transition: .2s;
    }
</style>

<hr />
<div class="container center">
    <h4>Please login :) </h4>
</div>
<div class="container1 center">
    <div class="screen">

        <form asp-controller="Home" asp-action="LoginForm" method="post">
            <div>
                <labeal class="form-label">Email</labeal>
                <input asp-for=Email type="text" class="form-control" required />
            </div>
            <div>
                <label class="form-label">Password</label>
                <input asp-for=Password type="password" class="form-control" required />
            </div>
            @if (SettingsModel.ErrorFlag == true)
            {
                    <div class="text-danger">Login information incorrect. Please double-check or register</div>
            }
            <div class="mt-3">
                <button type="submit" class="loginbtn">Login</button>
            </div>
        </form>
    </div>
</div>


<div class="container register">
    <a asp-controller="Home" asp-action="Register">New member? Sign up</a>
</div>