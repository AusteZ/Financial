<html>
    <head>
        <!-- CSS only -->
        <style>
            .blue {
                background-color: #123456 !important;
            }

            .grey {
                background-color: #b5b5b5 !important;
            }

            .greyblue {
                background-color: #6789AB !important;
            }

            .rectangle {
                position: absolute;
                width: 100%;
                height: 65%;
            }

            .overlay {
                z-index: 100;
                height: 40%;
                width: 100%;
            }

            .card-size {
                height: 300px;
                width: 10%;
            }

            .card {
                position: relative;
            }

            .padding-both-sides {
                padding-left: 25% !important;
                padding-right: 25% !important;
            }

            .text-bg-white {
                color: white;
            }
]

        </style>
    </head>
    <body class="blue">
    <h2 class="text-bg-white">What do you spend the most of your money on?</h2>
        <table class="table text-bg-white">
            <thead>
                <tr>
                    <th scope="col">Category</th>
                    <th scope="col">Money Spent</th>
                </tr>
            </thead>
            @for (int i = 0; i < 8; i++)
            {    
                <tbody>
                    @if (ViewBag.CategoriesCount[i] == ViewBag.BiggestExpense && ViewBag.BiggestExpense != 0)
                    {
                        @if (ViewBag.Categories[i] == "Saving&Investing")
                        {
                            <tr class="bg-success">
                                <td>@ViewBag.Categories[i]</td>
                                <td>@ViewBag.CategoriesCount[i]</td>
                            </tr>
                        }
                        else
                        {
                            <tr class="bg-danger">
                                <td>@ViewBag.Categories[i]</td>
                                <td>@ViewBag.CategoriesCount[i]</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>@ViewBag.Categories[i]</td>
                            <td>@ViewBag.CategoriesCount[i]</td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </body>
</html>