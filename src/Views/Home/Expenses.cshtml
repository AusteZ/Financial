            .overlay{
                z-index: 100;
                height: 40%;
                width: 100%;
            }
            .card-size{
                height: 300px;
                width: 10%;
            }
            .card{
                position:relative;
            }
            .padding-both-sides{
                padding-left: 25% !important;
                padding-right: 25% !important;
            }
            .text-bg-white{
                color: white;
            }
            .dimensions{
                width:40%;
                float: left;
                margin:20px;
            }
            .margin{
                width:20%;
                height:100%;
                float: left;
            }
        </style>
    </head>
    <body class = "blue">

        <!-- SIMPLE NAVBAR -->
        <a asp-controller="Home" asp-action="Save" class = "btn btn-light">Save</a>
        <a asp-controller="Home" asp-action="Sort" class = "btn btn-light">Clasify expenses</a>
        <a asp-controller="Home" asp-action="ExpensesForm" class = "btn btn-light">Create New Expense</a>
        <a asp-controller="Home" asp-action="ExpensesForm" asp-route-type="1" class = "btn btn-light">Create New Income</a>

        <br/><br/>

        <table class="table text-bg-white">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Amount</th>
                <th scope="col">Currency</th>
                <th scope="col">Date</th>
                <th scope="col">Place</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model) {@if(expense.isExpense==true){
                <tr class="bg-danger">
                    <td>@expense.Product</td>
                    <td>@expense.Category</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Currency</td>
                    <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                    <td>@expense.Place</td>
                    <td>
                        @Html.ActionLink(
                            "Edit", 
                            "ExpensesForm",                         // controller action
                            "Home",        // controller
                            new { id = expense.Index },         // action parameters aka route values
                            new { @class = "btn btn-light" })
                        @Html.ActionLink(
                            "Delete", 
                            "ExpenseLineDelete",                         // controller action
                            "Home",        // controller
                            new { id = expense.Index , type = 0},         // action parameters aka route values
                            new { @class = "btn btn-light" })
   
                    </td>
                </tr>
            }
            @if(expense.isExpense==false){
                <tr class="bg-success">
                    <td>@expense.Product</td>
                    <td>@expense.Category</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Currency</td>
                    <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                    <td>@expense.Place</td>
                    <td>
                        @Html.ActionLink(
                            "Edit", 
                            "ExpensesForm",                         // controller action
                            "Home",        // controller
                            new { id = expense.Index },         // action parameters aka route values
                            new { @class = "btn btn-light" })
                        @Html.ActionLink(
                            "Delete", 
                            "ExpenseLineDelete",                         // controller action
                            "Home",        // controller
                            new { id = expense.Index , type = 0},         // action parameters aka route values
                            new { @class = "btn btn-light" })
   
                    </td>
                </tr>
            }}
        </tbody>
    </table>
