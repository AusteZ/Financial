    <body class = "blue">

        <!-- SIMPLE NAVBAR -->
        <a asp-controller="Home" asp-action="Save" class = "btn btn-light">Save</a>
        <a asp-controller="Home" asp-action="ExpensesForm" class = "btn btn-light">Create New</a>

        <table class="table text-bg-white">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Currency</th>
                <th scope="col" colspan="2">Place</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var expense in Model){
                <tr>
                    <td>@expense.What</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Currency</td>
                    <td>@expense.Where</td>
                    <td>
                        @Html.ActionLink(
                            "Edit", 
                            "ExpensesForm",                         // controller action
                            "Home",        // controller
                            new { id = expense.Index },         // action parameters aka route values
                            new { @class = "btn btn-light" })
                        @Html.ActionLink(
                            "Delete", 
                            "ExpenseLineDelete",                         // controller action
                            "Home",        // controller
                            new { id = expense.Index },         // action parameters aka route values
                            new { @class = "btn btn-light" })
   
                    </td>
                </tr>
            }
        </tbody>
    </table>
        




        
